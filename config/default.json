{
  "host": "0.0.0.0",
  "port": 3030,
  "public": "./public/",
  "origins": [
    "https://orders.kwetu.co.uk",
    "https://www.orders.kwetu.co.uk"
  ],
  "paginate": {
    "default": 10,
    "max": 50
  },
  "platformDbConfig": {
    "client": "pg",
    "pool": { "min": 1, "max": 5 }
  },
  "opsDbConfig": {
    "client": "pg",
    "pool": { "min": 1, "max": 5 }
  },
  "authentication": {
    "entity": "user",
    "service": "users",
    "secret": "${JWT_SECRET}",
    "authStrategies": [
      "jwt",
      "local"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://orders.kwetu.co.uk",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    }
  },
  "apiPath": "/api/v1"
}
